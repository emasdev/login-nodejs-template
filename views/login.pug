extends layout

block content
  .container 
    .row
      .col-12
        .card
          .card-body
            form(action='user/login' method='POST')
              .mb-3
                label.form-label(for='login-email') Direcci√≥n de email
                input#login-email.form-control(type='email' aria-describedby='loginEmailHelp')
                #loginEmailHelp.form-text Ingrese su email vinculado a su cuenta de IDM Cloud.
              .mb-3
                label.form-label(for='exampleInputPassword1') Password
                input#exampleInputPassword1.form-control(type='password')
              .mb-3.form-check
                input#exampleCheck1.form-check-input(type='checkbox')
                label.form-check-label(for='exampleCheck1') Recordar
              button.btn.btn-primary(type='submit') Acceder



